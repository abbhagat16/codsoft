char seatno()
{int g;
 cin>>g;
 if(g==1){ cout<<seat1()<<endl;
 cout<<"TOTAL AMOUNT TO BE PAID INCLUDING TAXES = "<<g*250+8;}
 else if(g==2){cout<<seat2()<<endl;
 cout<<"TOTAL AMOUNT TO BE PAID INCLUDING TAXES = "<<g*250+16;}
