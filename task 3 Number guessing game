using namespace std;
class game
{public :
    int n,m,b;
    game(int n, int m, int b)
    { n=n;
    m=m;
    b=b;
    }

char level1()
{ cout<<"GUESS THE NUMBER "<<endl;
cin>>n;
if(n==45)
{ cout<<"COREECT NUMBER"<<endl;
cout<<"PLAY AGAIN"<<endl;}
else if(n>45&&n<70){ cout<<"CHOICE IS HIGH"<<endl;}
else if(n>70){ cout<<"CHOICE IS TO HIGH"<<endl;}
else if(n<45&&n>30){cout<<"CHOICE IS LOW"<<endl;}
else if(n<30){ cout<<"CHOICE IS TOO LOW"<<endl;}
cout<<"TRY AGAIN"<<endl;
cin>>m;
if(m==50){ cout<<"COREECT NUMBER"<<endl;
cout<<"PLAY AGAIN"<<endl;}
else if(m>50&&m<70){ cout<<"CHOICE IS HIGH"<<endl;}
else if(m>70){ cout<<"CHOICE IS TO HIGH"<<endl;}
else if(m<50&&m>30){cout<<"CHOICE IS LOW"<<endl;}
else if(m<30){ cout<<"CHOICE IS TOO LOW"<<endl;}
cout<<"TRY AGAIN"<<endl;
cin>>b;
if(b==52){ cout<<"COREECT NUMBER"<<endl;
cout<<"PLAY AGAIN"<<endl;}
else if(b>52&&b<70){ cout<<"CHOICE IS HIGH"<<endl;}
else if(b>70){ cout<<"CHOICE IS TO HIGH"<<endl;}
else if(b<52&&b>30){cout<<"CHOICE IS LOW"<<endl;}
else if(b<30){ cout<<"CHOICE IS TOO LOW"<<endl;}
    return ' ';
}

char level2()
{ cout<<"GUESS THE NUMBER "<<endl;
